    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false" >

    <com.spt.carengine.view.PercentRelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:layout_heightPercent="91.4%h"
        app:layout_marginLeftPercent="-1.04%w"
        app:layout_widthPercent="79.6%w"
        android:background="@drawable/home_bg" />

    <include
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_widthPercent="21.25%w"
        layout="@layout/fragment_main_menu" />

    <include
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        app:layout_heightPercent="8.7%h"
        app:layout_widthPercent="79.6%w"
        layout="@layout/fragment_status_bar" />

</com.spt.carengine.view.PercentRelativeLayout>