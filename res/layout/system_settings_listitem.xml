<?xml version="1.0" encoding="utf-8"?>
<com.spt.carengine.view.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_heightPercent="16.19%h" >

    <ImageView
        android:id="@+id/system_settings_List_item_img"
        style="@style/Height_Width_0_wrap"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:layout_heightPercent="50%h"
        app:layout_marginLeftPercent="4.58%w"
        android:src="@drawable/my_enter_icon" />

    <TextView
        android:id="@+id/system_settings_List_item_title"
        style="@style/Height_Width_wrap"
        android:layout_alignBaseline="@id/system_settings_List_item_img"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/system_settings_List_item_img"
        app:layout_textSizePercent="40%h"
        android:text="@string/wifiap_btn_connectwifis"
        android:textColor="@color/text_color_selector" />

    <ImageView
         android:id="@+id/system_settings_List_item_right_img"
        style="@style/Height_Width_0_wrap"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:layout_heightPercent="50%h"
        app:layout_marginRightPercent="7.09%w"
        android:src="@drawable/my_enter_icon" 
       />

    <View
        android:id="@+id/user_list_item_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        app:layout_marginLeftPercent="3.04%w"
        app:layout_marginRightPercent="3.04%w"
        android:background="#375A73" />

</com.spt.carengine.view.PercentRelativeLayout>