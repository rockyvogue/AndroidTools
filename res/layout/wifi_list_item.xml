<?xml version="1.0" encoding="utf-8"?>
<com.spt.carengine.view.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
     android:descendantFocusability="beforeDescendants"
    app:layout_heightPercent="16.19%h" >

    <com.spt.carengine.view.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        app:layout_marginLeftPercent="7.09%w"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/wifi_name"
            style="@style/Height_Width_0_wrap"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            app:layout_marginLeftPercent="7.09%w"
            app:layout_textSizePercent="35%h"
            android:textColor="@color/popup_title_color" />

        <TextView
            android:id="@+id/wifi_status"
            style="@style/Height_Width_0_wrap"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            app:layout_marginLeftPercent="7.09%w"
            app:layout_textSizePercent="22.5%h"
            android:textColor="@color/popup_title_color" />
    </com.spt.carengine.view.PercentLinearLayout>

    <ImageView
        android:id="@+id/wifi_sigmal"
        style="@style/Height_Width_0_wrap"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:layout_heightPercent="50%h"
        app:layout_marginRightPercent="7.09%w"
        android:src="@drawable/wifi_signal_icon4" />

    <View
        android:id="@+id/wifi_underline_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        app:layout_marginLeftPercent="3.04%w"
        app:layout_marginRightPercent="3.04%w"
        android:background="#375A73" />

</com.spt.carengine.view.PercentRelativeLayout>