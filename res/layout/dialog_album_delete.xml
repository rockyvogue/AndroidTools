<?xml version="1.0" encoding="utf-8"?>
<com.spt.carengine.view.DialogView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/album_delete_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent" >

    <com.spt.carengine.view.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="29.63%h"
        app:layout_marginLeftPercent="40.31%w"
        app:layout_marginTopPercent="30.19%h"
        app:layout_widthPercent="39.69%w"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="50%h"
            app:layout_textSizePercent="16.5%h"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/h_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/message"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/dialog_line_h" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/h_line"
            app:layout_heightPercent="49%h"
            app:layout_textSizePercent="16.5%h"
            app:layout_widthPercent="50%w"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/album_text_selector" />

        <ImageView
            android:id="@+id/v_line"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_below="@id/h_line"
            android:layout_toRightOf="@id/cancel"
            app:layout_heightPercent="50%h"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/dialog_line_v" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignRight="@+id/message"
            android:layout_below="@+id/message"
            app:layout_heightPercent="49%h"
            app:layout_textSizePercent="16.5%h"
            app:layout_widthPercent="50%w"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/album_text_selector" />

    </com.spt.carengine.view.PercentRelativeLayout>

</com.spt.carengine.view.DialogView>