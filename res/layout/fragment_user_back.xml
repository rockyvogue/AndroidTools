<?xml version="1.0" encoding="utf-8"?>
<com.spt.carengine.view.ReturnBarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/back_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/state_bg" >

    <com.spt.carengine.view.PercentRelativeLayout
        android:id="@+id/back_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_widthPercent="13.19%w" >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="30%h"
            app:layout_widthPercent="40%w"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/back_btn" />
    </com.spt.carengine.view.PercentRelativeLayout>

    <TextView
        android:id="@+id/user_listView_below_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/back_layout"
        app:layout_marginLeftPercent="1.31%w"
        app:layout_textSizePercent="40%h"
        android:text="@string/fragment_myCenter"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/user_listView_below_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:layout_heightPercent="55.56%h"
        app:layout_marginBottomPercent="22.22%h"
        app:layout_marginRightPercent="6.54%w"
        app:layout_marginTopPercent="22.22%h"
        app:layout_widthPercent="16.23%w"
        android:background="@drawable/checkbox_fm_switch"
        android:button="@null"
        android:checked="true"
        android:visibility="gone" />

</com.spt.carengine.view.ReturnBarView>