<?xml version="1.0" encoding="utf-8"?>
<com.spt.carengine.view.PercentLinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="horizontal">

    <ImageView
        android:id="@+id/myCenter_listView_below_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/myCenter_listView_below_imageView"
        android:layout_gravity="center_vertical"
        app:layout_marginLeftPercent="2.61%w"
        app:layout_textSizePercent="7.3%h"
        android:text="@string/home_user"
        android:textColor="#000000" />

</com.spt.carengine.view.PercentLinearLayout>