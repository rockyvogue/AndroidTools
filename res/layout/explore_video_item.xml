<?xml version="1.0" encoding="utf-8"?>
<com.spt.carengine.view.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.spt.carengine.view.PercentRelativeLayout
        android:id="@+id/explore_video_back"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:tag="back" >

        <ImageView
            android:id="@+id/explorevideo_item_delete"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/video_icon_delete_btn"
            android:contentDescription="@null" />
    </com.spt.carengine.view.PercentRelativeLayout>

    <com.spt.carengine.view.PercentRelativeLayout
        android:id="@+id/explore_itme_front"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/explore_video_bg_color"
        android:orientation="vertical"
        android:tag="front" >

        <!-- 缩略图 -->

        <ImageView
            android:id="@+id/explorevideo_item_thumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/contact_head_img" />

        <TextView
            android:id="@+id/explorevideo_item_rightside_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/explorevideo_item_thumb"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="gone" />

        <com.spt.carengine.view.PercentRelativeLayout
            android:id="@+id/explorevideo_item_rightside_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/explorevideo_item_thumb"
            android:visibility="gone" >

            <!-- 文件名称 -->

            <TextView
                android:id="@+id/explorevideo_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp" >
            </TextView>

            <!-- 文件大小 -->

            <TextView
                android:id="@+id/explorevideo_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/explorevideo_item_name"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/item_time"
                android:singleLine="true"
                android:textColor="@color/listview_item_little_font_color"
                android:textSize="13sp" />
            <!-- 文件时间 -->

            <TextView
                android:id="@+id/explorevideo_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/explorevideo_item_size"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/explorevideo_item_size"
                android:singleLine="true"
                android:textColor="@color/listview_item_little_font_color"
                android:textSize="13sp" />
        </com.spt.carengine.view.PercentRelativeLayout>

        <ImageView
            android:id="@+id/explorevideo_item_lock"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/explore_video_icon_lock_btn"
            android:contentDescription="@null" />
    </com.spt.carengine.view.PercentRelativeLayout>

</com.spt.carengine.view.PercentRelativeLayout>