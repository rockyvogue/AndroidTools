<com.spt.carengine.view.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2D3C"
    android:orientation="vertical" >

    <com.spt.carengine.view.PercentLinearLayout
        android:id="@+id/btn_bt_dial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.spt.carengine.view.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="36.44%h"
            app:layout_marginTopPercent="12.15%h"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_call_anime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:layout_marginLeftPercent="30.12%w"
                app:layout_widthPercent="38.09%w"
                android:src="@drawable/call_animation_list" />
        </com.spt.carengine.view.PercentLinearLayout>

        <TextView
            android:id="@+id/tv_call_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="1.06%h"
            app:layout_textSizePercent="4.28%w"
            android:gravity="center"
            android:text="@string/tv_call_time"
            android:textColor="#ffffff" >
        </TextView>

        <TextView
            android:id="@+id/tv_call_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="1.06%h"
            app:layout_textSizePercent="3.19%w"
            android:gravity="center"
            android:text="@string/tv_call_number"
            android:textColor="#ffffff" >
        </TextView>

        <com.spt.carengine.view.PercentLinearLayout
            app:layout_marginTopPercent="5.06%h"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="14.98%h"
            android:gravity="center" >

            <Button
                android:id="@+id/btn_call_handsfree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="19.37%w"
                android:background="@drawable/select_btn_bt_handsfree_but"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_call_answer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="19.37%w"
                android:background="@drawable/select_btn_bt_answer"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_call_hang"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_marginLeftPercent="13.87%w"
                app:layout_widthPercent="19.37%w"
                android:background="@drawable/select_btn_bt_onhook" />
        </com.spt.carengine.view.PercentLinearLayout>
    </com.spt.carengine.view.PercentLinearLayout>

</com.spt.carengine.view.PercentRelativeLayout>