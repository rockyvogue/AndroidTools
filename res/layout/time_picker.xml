<?xml version="1.0" encoding="utf-8"?>
<com.spt.carengine.view.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:focusable="false"
    android:gravity="center_vertical" >

    <com.spt.carengine.datepicker.NumberPicker
        android:id="@+id/time_hours"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_widthPercent="47.95%w"
        android:background="@drawable/set_time_bg_date" />

    <com.spt.carengine.datepicker.NumberPicker
        android:id="@+id/time_minutes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/time_hours"
        android:layout_toRightOf="@id/time_hours"
        app:layout_marginLeftPercent="4.09%w"
        app:layout_widthPercent="47.95%w"
        android:background="@drawable/set_time_bg_date" />

</com.spt.carengine.view.PercentRelativeLayout>