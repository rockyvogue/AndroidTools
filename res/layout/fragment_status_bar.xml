<?xml version="1.0" encoding="utf-8"?>
<com.spt.carengine.view.StatusBarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/state_bg"
    android:gravity="right"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/status_bluetooth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        app:layout_heightPercent="65.22%h"
        app:layout_marginRightPercent="2.22%w"
        app:layout_widthPercent="65.22%h"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/status_wifi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        app:layout_heightPercent="65.22%h"
        app:layout_marginRightPercent="2.22%w"
        app:layout_widthPercent="65.22%h"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/status_gps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        app:layout_heightPercent="65.22%h"
        app:layout_marginRightPercent="2.22%w"
        app:layout_widthPercent="65.22%h"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/status_signer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        app:layout_heightPercent="65.22%h"
        app:layout_marginRightPercent="2.22%w"
        app:layout_widthPercent="65.22%h"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/state_signal_icon_3" />

    <TextView
        android:id="@+id/status_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:layout_marginRightPercent="2.22%w"
        app:layout_textSizePercent="43.48%h"
        android:textColor="#fefefe"
        android:textSize="0sp"
        android:textStyle="bold" />

</com.spt.carengine.view.StatusBarView>