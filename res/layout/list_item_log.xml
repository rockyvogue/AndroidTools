<com.spt.carengine.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#264962"
    android:orientation="horizontal" >

    <com.spt.carengine.view.PercentLinearLayout
        android:id="@+id/subject_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        app:layout_widthPercent="80%w"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dip"
            android:layout_weight="7"
            app:layout_textSizePercent="35.56%h"
            android:gravity="left|center"
            android:textColor="#FFFFFF" />

        <com.spt.carengine.view.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dip"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:weightSum="5" >

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                app:layout_textSizePercent="60%h"
                android:gravity="left|center"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                app:layout_textSizePercent="60%h"
                android:gravity="left|center"
                android:textColor="#FFFFFF" />
        </com.spt.carengine.view.PercentLinearLayout>
    </com.spt.carengine.view.PercentLinearLayout>

    <Button
        android:id="@+id/btn_item_dial"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        app:layout_widthPercent="20%w"
        android:background="@drawable/select_btn_bt_item_dial" />

</com.spt.carengine.view.PercentLinearLayout>