<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/ly2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:background="@color/playvideo_bottom_bar_bg" > <!-- android:background="@drawable/mic_status_bk" -->

        <ImageView
            android:id="@+id/btnMic"
            android:layout_width="@dimen/mic_icon"
            android:layout_height="@dimen/mic_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:src="@drawable/btn_mic" />

        <ImageView
            android:id="@+id/imageViewRecognize"
            android:layout_width="@dimen/mic_icon"
            android:layout_height="@dimen/mic_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:src="@drawable/recognizering_bg"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/voice_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/btnMic"
            android:src="@drawable/voice_volume"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/mic_text_answer_margin"
            android:layout_marginRight="@dimen/mic_text_answer_margin"
            android:singleLine="true"
            android:textColor="@color/grey_white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" 
            android:src="@drawable/btn_mic_cancel" />
    </RelativeLayout>
</merge>